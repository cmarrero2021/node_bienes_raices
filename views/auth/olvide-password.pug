extends ../layout/index
block contenido 
    .py-10
        h1.text-4xl.my10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina
        if errores 
            div.max-w-md.mx-auto.my-10
                each error in errores
                    p.bg-red-800.text-yellow-200.proppercase.text-xs.text-left.p-2.mb-1.font-bold= error.msg 

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-md
                form.space-y-5(method="post" action="/auth/olvide-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb3.font-bold(for="correo") Correo
                        input#correo.lowercase.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(placeholder="Introduzca su correo" type="email" name="email")
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") Crear cuenta
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar sesi√≥n
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar")