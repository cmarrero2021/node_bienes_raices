extends ../layout/index
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css") 

block contenido 
    .py-10
        h1.text-4xl.my10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white sgadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h1.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añadir información sobre la propiedad
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb3.font-bold(for="titulo") Título
                        input#titulo.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(placeholder="Introduzca el titulo del anuncio" type="text" name="titulo")
                    div(class="md:flex md:gap-4 space-y-8 md:space-y-0")
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb3.font-bold(for="categoria") Categoría
                            select#categoria.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") Seleccione la categoría
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-700.mb3.font-bold(for="precio") Categoría
                            select#precio.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") Seleccione el rango de precios
                    div(class="md:flex md:gap-4 space-y-8 md:space-y-0")
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb3.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") Seleccione
                                - var n=1;
                                    while n < 5
                                        option(values=n) #{n++}
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-700.mb3.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value="") Seleccione
                                - var n=1;
                                    while n < 5
                                        option(values=n) #{n++}
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-700.mb3.font-bold(for="banos") Baños
                            select#banos.w-full.px-3.py-2.border.border-black.rounded-md.placeholder-gray-400(name="banos")
                                option(value="") Seleccione
                                - var n=1;
                                    while n < 5
                                        option(values=n) #{n++}
                    .border-gray-200.border-t.py-5
                        h1.text-lg.font-medium.text-gray-900 Ubicación 
                        p.text-gray-600 Ubica la propiedad en el mapa
                    #mapa.h-96 

                    div
                        p.calle
                    input(type="hidden" name="calle" id="calle")
                    input(type="hidden" name="lat" id="lat" placeholder="PEPE")
                    input(type="hidden" name="lng" id="lng")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")